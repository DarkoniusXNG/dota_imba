<root>
	<styles>
		<include
			src="file://{resources}/styles/custom_game/custom_loading_screen.css" />
		<include src="file://{resources}/styles/dotastyles.vcss_c" />
	</styles>

	<scripts>
		<include
			src="file://{resources}/scripts/custom_game/simple_panel_animation.js" />
		<include src="file://{resources}/scripts/custom_game/game_mode.js" />
		<include src="file://{resources}/scripts/custom_game/news.js" />
	</scripts>

	<Panel class="addon-root">
		<Panel id="overthrow-loading">
			<Panel id="seq">
				<Image id="seq_bg" class="SeqBg"
					src="file://{images}/custom_game/loading_screen/loading_seq_bg.psd" />
				<Image id="seq_beastmaster_pets" class="SeqImg"
					src="file://{images}/custom_game/loading_screen/loading_seq_beastmaster_pets.psd" />
				<Image id="seq_beastmaster" class="SeqImg"
					src="file://{images}/custom_game/loading_screen/loading_seq_beastmaster.psd" />
				<Image id="seq_luna" class="SeqImg"
					src="file://{images}/custom_game/loading_screen/loading_seq_luna.psd" />
				<Image id="seq_juggernaut" class="SeqImg"
					src="file://{images}/custom_game/loading_screen/loading_seq_juggernaut.psd" />
				<Image id="seq_coins" class="SeqImg"
					src="file://{images}/custom_game/loading_screen/loading_seq_coins.psd" />
			</Panel>

			<Panel id="imba-social">
				<Panel class="imba-social-buttons">
					<Button id="imba-social-button-reddit" class="imba-social-button"
						onactivate="DOTADisplayURL('https://www.reddit.com/r/dotaimba/');" />
					<Button id="imba-social-button-patreon" class="imba-social-button"
						onactivate="DOTADisplayURL('https://www.patreon.com/xherosiege');" />
					<Button id="imba-social-button-facebook" class="imba-social-button"
						onactivate="DOTADisplayURL('https://www.facebook.com/D2IMBA/');" />
					<Button id="imba-social-button-twitter" class="imba-social-button"
						onactivate="DOTADisplayURL('https://twitter.com/Dota2IMBA42');" />
				</Panel>
			</Panel>

			<Panel id="imba-social">
				<Panel class="imba-social-buttons">
					<Button id="imba-social-button-discord-en" class="imba-social-button"
						onactivate="DOTADisplayURL('http://tinyurl.com/imba-discord');" />
					<Button id="imba-social-button-discord-ru" class="imba-social-button"
						onactivate="DOTADisplayURL('https://discord.gg/HcybJKt');" />
					<Button id="imba-social-button-tencent" class="imba-social-button"
						onactivate="DOTADisplayURL('https://www.bilibiliduang.cn/imbagroup');" />
				</Panel>
			</Panel>

			<Panel id="imba-ow-news">
				<Label id="imba-ow-news-title" text="Dota IMBA 7.04 - Wild Origins" />
				<Label id="imba-ow-news-article-text" />
				<Label id="imba-normal-news-link" text="> Read more news on our Official Website"
					onactivate="DOTADisplayURL('https://preview.dota2imba.org/wild-origins');" />
				<Label id="imba-normal-news-link2" text="> Click here to participate in our survey and get an XP Bounty!"
					onactivate="DOTADisplayURL('https://goo.gl/2Z4DBv');" />
				<Panel id="oaa-normal-news-panel">
					<Panel id="oaa-normal-news-text">
						<Label id="oaa-normal-news-title" text="Open Angel Arena Anniversary Tournament" />
						<Label id="oaa-normal-news-article-text" text="#oaa_news_text" />
						<Label id="oaa-normal-news-link" text="Tournament Website"
							onactivate="DOTADisplayURL('https://oaa.gg/tournament');" />
					</Panel>

					<Image id="oaa-normal-news-image"
						src="file://{images}/custom_game/loading_screen/oaa.png" />
				</Panel>
			</Panel>
		</Panel>

		<Panel id="imba-loading">
			<Panel id="imba-admin">
				<Panel id="GameOptionsPanel">
					<Label id="game_options_game_mode_title" text="#imba_gamemode_name_all_pick" />

					<Panel id="GoldOptionsPanel" class="GameOptionsSubPanel"
						onmouseover="UIShowTextTooltip( imba_gamemode_settings_gold_multiplier_tooltip )"
						onmouseout="UIHideTextTooltip()">
						<Label id="GoldOptionsLabel" class="GameOptionsLabel"
							text="#imba_gamemode_settings_gold_multiplier" />
						<RadioButton id="GoldOption1" class="GameOptionsToggle"
							group="GoldOption" text="#imba_gamemode_settings_power_1"
							onactivate="SetGameParameters('gold', 1);" />
						<RadioButton id="GoldOption2" class="GameOptionsToggle"
							group="GoldOption" text="#imba_gamemode_settings_power_2"
							onactivate="SetGameParameters('gold', 2);" />
					</Panel>

					<Panel id="ExpOptionsPanel" class="GameOptionsSubPanel"
						onmouseover="UIShowTextTooltip( imba_gamemode_settings_exp_multiplier_tooltip )"
						onmouseout="UIHideTextTooltip()">
						<Label id="ExpLabel" class="GameOptionsLabel"
							text="#imba_gamemode_settings_exp_multiplier" />
						<RadioButton id="ExpOption1" class="GameOptionsToggle"
							group="ExpOption" text="#imba_gamemode_settings_power_1"
							onactivate="SetGameParameters('exp', 1);" />
						<RadioButton id="ExpOption2" class="GameOptionsToggle"
							group="ExpOption" text="#imba_gamemode_settings_power_2"
							onactivate="SetGameParameters('exp', 2);" />
					</Panel>

					<Panel id="TowerPowerOptionsPanel" class="GameOptionsSubPanel"
						onmouseover="UIShowTextTooltip( imba_gamemode_settings_tower_power_title_tooltip )"
						onmouseout="UIHideTextTooltip()">
						<Label id="TowerPowerOptionsLabel" class="GameOptionsLabel"
							text="#imba_gamemode_settings_tower_power_title" />
						<RadioButton id="TowerPowerOption1" class="GameOptionsToggle"
							group="TowerPowerOption" text="#imba_gamemode_settings_power_1"
							onactivate="SetGameParameters('tower', 1);" />
						<RadioButton id="TowerPowerOption2" class="GameOptionsToggle"
							group="TowerPowerOption" text="#imba_gamemode_settings_power_2"
							onactivate="SetGameParameters('tower', 2);" />
					</Panel>

					<Panel id="HeroPowerOptionsPanel" class="GameOptionsSubPanel"
						onmouseover="UIShowTextTooltip( imba_gamemode_settings_hero_power_title_tooltip )"
						onmouseout="UIHideTextTooltip()">
						<Label id="HeroPowerLabel" class="GameOptionsLabel"
							text="#imba_gamemode_settings_hero_power_title" />
						<RadioButton id="HeroPower1" class="GameOptionsToggle"
							group="HeroPower" text="#imba_gamemode_settings_power_1"
							onactivate="SetGameParameters('hero', 1);" />
						<RadioButton id="HeroPower2" class="GameOptionsToggle"
							group="HeroPower" text="#imba_gamemode_settings_power_2"
							onactivate="SetGameParameters('hero', 2);" />
					</Panel>

					<Panel class="GameOptionsSubPanel_alt">
						<RadioButton id="AllPickToggle" class="GameOptionsToggle"
							group="GameLength" text="#imba_gamemode_name_all_pick"
							onmouseover="UIShowTextTooltip( imba_gamemode_name_all_pick_tooltip )"
							onmouseout="UIHideTextTooltip()" />
						<RadioButton id="AllRandomToggle" class="GameOptionsToggle"
							group="GameLength" text="#imba_gamemode_name_all_random"
							onmouseover="UIShowTextTooltip( imba_gamemode_name_all_random_tooltip )"
							onmouseout="UIHideTextTooltip()" />
						<RadioButton id="AllRandomSameHeroToggle" class="GameOptionsToggle"
							group="GameLength" text="#imba_gamemode_name_all_random_same_hero"
							onmouseover="UIShowTextTooltip( imba_gamemode_name_all_random_same_hero_tooltip )"
							onmouseout="UIHideTextTooltip()" />
					</Panel>
					<Panel class="GameOptionsSubPanel_alt">
						<Label id="FranticInfo" text="#imba_gamemode_game_options_frantic_tooltip" />
					</Panel>

					<Panel id="QuickOptionsPanel" class="GameOptionsSubPanel">
						<Button id="QuickOptionsNormalBtn" onactivate="SetQuickOptionsNormal();"
							onmouseover="UIShowTextTooltip( imba_gamemode_settings_regular_tooltip )"
							onmouseout="UIHideTextTooltip()">
							<Label id="QuickOptionsNormalBtnLabel" class="QuickOptionsBtnLabel"
								text="#imba_gamemode_settings_regular" />
						</Button>

						<Button id="QuickOptionsHighBtn" onactivate="SetQuickOptionsHigh();"
							onmouseover="UIShowTextTooltip( imba_gamemode_settings_high_tooltip )"
							onmouseout="UIHideTextTooltip()">
							<Label id="QuickOptionsHighBtnLabel" class="QuickOptionsBtnLabel"
								text="#imba_gamemode_settings_high" />
						</Button>
					</Panel>
				</Panel>
			</Panel>

			<Panel id="imba-social">
				<Panel class="imba-social-buttons">
					<Button id="imba-social-button-reddit" class="imba-social-button"
						onactivate="DOTADisplayURL('https://www.reddit.com/r/dotaimba/');" />
					<Button id="imba-social-button-patreon" class="imba-social-button"
						onactivate="DOTADisplayURL('https://www.patreon.com/xherosiege');" />
					<Button id="imba-social-button-facebook" class="imba-social-button"
						onactivate="DOTADisplayURL('https://www.facebook.com/D2IMBA/');" />
					<Button id="imba-social-button-twitter" class="imba-social-button"
						onactivate="DOTADisplayURL('https://twitter.com/Dota2IMBA42');" />
				</Panel>
			</Panel>

			<Panel id="imba-social">
				<Panel class="imba-social-buttons">
					<Button id="imba-social-button-discord-en" class="imba-social-button"
						onactivate="DOTADisplayURL('http://tinyurl.com/imba-discord');" />
					<Button id="imba-social-button-discord-ru" class="imba-social-button"
						onactivate="DOTADisplayURL('https://discord.gg/HcybJKt');" />
					<Button id="imba-social-button-tencent" class="imba-social-button"
						onactivate="DOTADisplayURL('https://www.bilibiliduang.cn/imbagroup');" />
				</Panel>
			</Panel>

			<Panel id="imba-normal-news">
				<Label id="imba-normal-news-title" text="Dota IMBA 7.04 - Wild Origins" />
				<Label id="imba-normal-news-article-text" />
				<Label id="imba-normal-news-link" text="> Read more news on our Official Website"
					onactivate="DOTADisplayURL('https://preview.dota2imba.org/wild-origins');" />
				<Label id="imba-normal-news-link2" text="> Click here to participate in our survey and get an XP Bounty!"
					onactivate="DOTADisplayURL('https://goo.gl/2Z4DBv');" />
				<Panel id="oaa-normal-news-panel">
					<Panel id="oaa-normal-news-text">
						<Label id="oaa-normal-news-title" text="Open Angel Arena Anniversary Tournament" />
						<Label id="oaa-normal-news-article-text" text="#oaa_news_text" />
						<Label id="oaa-normal-news-link" text="Tournament Website"
							onactivate="DOTADisplayURL('https://oaa.gg/tournament');" />
					</Panel>

					<Image id="oaa-normal-news-image"
						src="file://{images}/custom_game/loading_screen/oaa.png" />
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>
