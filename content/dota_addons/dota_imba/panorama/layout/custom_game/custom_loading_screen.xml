<root>
	<styles>
		<include
			src="file://{resources}/styles/custom_game/custom_loading_screen.css" />
		<include src="file://{resources}/styles/dotastyles.vcss_c" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/game_mode.js" />
		<include src="file://{resources}/scripts/custom_game/news.js" />
	</scripts>

	<Panel class="addon-root">
		<Panel id="imba-loading">
			<Panel id="imba-social">
				<Panel class="imba-social-buttons">
					<Button id="imba-social-button-facebook" class="imba-social-button"
						onactivate="DOTADisplayURL('https://www.facebook.com/D2IMBA/');" />
					<Button id="imba-social-button-twitter" class="imba-social-button"
						onactivate="DOTADisplayURL('https://twitter.com/Dota2IMBA42');" />
					<Button id="imba-social-button-reddit" class="imba-social-button"
						onactivate="DOTADisplayURL('https://www.reddit.com/r/dotaimba/');" />
					<Button id="imba-social-button-patreon" class="imba-social-button"
						onactivate="DOTADisplayURL('https://www.patreon.com/xherosiege');" />
				</Panel>
			</Panel>

			<Panel id="imba-social">
				<Panel class="imba-social-buttons">
					<Button id="imba-social-button-discord-en" class="imba-social-button"
						onactivate="DOTADisplayURL('http://tinyurl.com/imba-discord');" />
					<Button id="imba-social-button-discord-ru" class="imba-social-button"
						onactivate="DOTADisplayURL('https://discord.gg/HcybJKt');" />
					<Button id="imba-social-button-tencent" class="imba-social-button"
						onactivate="DOTADisplayURL('https://www.bilibiliduang.cn/imbagroup');" />
				</Panel>
			</Panel>

			<Panel id="imba-news">
				<Label id="imba-news-title" text="Dota IMBA" />
				<Label id="imba-news-text" />
				<Label id="imba-news-link" text="> Read more news on our Official Website"
					onactivate="DOTADisplayURL('https://preview.dota2imba.org/wild-origins');" />
					
				<Panel id="additional-news-panel">
					<Panel id="additional-news-text">
						<Label id="additional-news-title" text="#oaa_news_title" />
						<Label id="additional-news-text" text="#oaa_news_text" />
						<Label class="additional-news-link" text="Pudge Wars Workshop Link"
							onactivate="DOTADisplayURL('https://steamcommunity.com/sharedfiles/filedetails/?id=296831818');" />
						<Label class="additional-news-link" text="X Hero Siege Workshop Link"
							onactivate="DOTADisplayURL('http://steamcommunity.com/sharedfiles/filedetails/?id=536682348');" />
						<Label class="additional-news-link" text="Hero Line Wars Workshop Link"
							onactivate="DOTADisplayURL('https://steamcommunity.com/sharedfiles/filedetails/?id=492195751');" />
					</Panel>

					<Image id="additional-news-image" />
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>
