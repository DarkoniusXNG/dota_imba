<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c"/>
		<include src="file://{resources}/layout/custom_game/ingame_advertizing/ingame_advertizing.css"/>
	</styles>

	<scripts>
		<include src="file://{resources}/layout/custom_game/ingame_advertizing/ingame_advertizing.js"/>
	</scripts>

	<Panel class="FixCG_Root" hittest="false">
		<Image id="FixCG_Image" src="file://{resources}/layout/custom_game/ingame_advertizing/ingame_advertizing.png"/>

		<Panel id="FixCG_MainText">
			<Label id="FixCG_Header" hittest="false" text="#ingame_advertizing_header"/>
			<Label id="FixCG_Description" hittest="false" text="#ingame_advertizing_description"/>
		</Panel>

		<Button class="FixCG_Button" id="FixCG_More" onactivate="ExternalBrowserGoToURL('https://dota2.fandom.com/wiki/Game_modes#Turbo_Mode')">
			<Label class="FixCH_ButtonText" text="#ingame_advertizing_more"/>
		</Button>

		<Button class="FixCG_Button" id="FixCG_Dismiss" onactivate="CloseFixGame()">
			<Label class="FixCH_ButtonText" text="#ingame_advertizing_dismiss"/>
		</Button>
	</Panel>
</root>
